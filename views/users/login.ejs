<% layout("/layouts/boilerplate") %>
    <div class="row offset-3">
        <div class="cols-sm-8">
    <h1 class="text-center"></h1>
    <form action="/login" method="post" novalidate class="needs-validation">
        <div class="mb-3 col-sm-6 ">
            <label for="username" class="form-label"><b>Username</b></label>
            <input type="text" placeholder="your username" name="username" id="username" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
            <div class="invalid-feedback">
                Please select a valid username
            </div>
        </div>
       
        <div class="mb-3 col-sm-6">
            <label for="password" class="form-label"><b>Password</b></label>
            <input type="text" placeholder="write your password" name="password" id="password" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
            <div class="invalid-feedback">
                Please select a valid password
              </div>
        </div>
        <br/>
        <div>
            <button class="btn btn-success"><b>Log In</b></button>
        </div>
        <br/>
    </form>
</div>
</div>

