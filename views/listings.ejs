<style>
  .tax-toggle{
    border: 2px solid green;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    text-align: center;
    background-color: #f8f9fa; /* Light gray background */
    transition: border-color 0.3s;
  }
  .tax-toggle:hover {
    border-color: #4b2ecc; /* Light green border on hover */
  }
  .tax-toggle-label {
    color: #4CAF50; /* Green text */
  }
  .card {
    border: none;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    position: relative;
    cursor: pointer;
  }
  .card:hover {
    transform: scale(1.05); /* Enlarge the card on hover */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Add shadow on hover */
  }
  .card-title {
    color: #2ecc71; /* Light green title */
    margin-bottom: 0.5rem;
  }
  .card-text {
    color: #000;
     /* Gray text */
  }
</style>
<div class="container-fluid">
  <div class="form-check-reverse tax-toggle form-switch offset-md-8">
    <input class="form-check-input ml-3" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
  </div>

  <h2 class="text-center">All Hospital</h2>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(list of lists){ %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <a href="/listing/<%= list._id %>" class="listing-link">
          <div class="card">
            <img src="<%= list.image.url%>" class="card-img-top card-image-overlay" alt="listing_image" style="height: 17rem;">
            <div class="card-body">
              <h6 class="card-title"><b name="search"><%= list.title %></b></h6>
              <p class="card-text font-bold">&#8377; <%= list.lowprice%> - <%= list.highprice%>/bed <i class="tax-info"> &nbsp; 18% GST</i></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
<script>
  let taxswitch=document.getElementById("flexSwitchCheckDefault");
  taxswitch.addEventListener("click",()=>{
    let taxinfo=document.getElementsByClassName("tax-info");
    for(info of taxinfo){
      if(info.style.display!="inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  })
</script>
